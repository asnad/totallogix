<section class="bg-light" id="team">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase"><%= @contents.team_heading %></h2>
        <h3 class="section-subheading text-muted"><%= @contents.team_upper_text %></h3>
      </div>
    </div>
    <div class="row">
      <% @members.each do |member| %>
        <div class="col-sm-4">
          <div class="team-member">
            <%= image_tag member.image_asset, class: "mx-auto rounded-circle"%>
            <h4><%= member.name %></h4>
            <p class="text-muted"><%= member.position %></p>
            <ul class="list-inline social-buttons">
              <li class="list-inline-item">
                <%= link_to member.facebook_profile.blank? ? "#" : member.facebook_profile do %>
                  <i class="fa fa-facebook"></i>
                <% end %>
              </li>
              <li class="list-inline-item">
                <%= link_to member.twitter_profile.blank? ? "#" : member.twitter_profile do %>
                  <i class="fa fa-twitter"></i>
                <% end %>
              </li>
              <li class="list-inline-item">
                <%= link_to member.linkedin_profile.blank? ? "#" : member.linkedin_profile do %>
                  <i class="fa fa-linkedin"></i>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-lg-8 mx-auto text-center">
        <p class="large text-muted"><%=@contents.team_description %></p>
      </div>
    </div>
  </div>
</section>